{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "makingstore",
  "version": "0.1.0",
  "identifier": "AIDotNet",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MakingStore",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "shell": {
      "all": true,
      "scope": [
        {
          "name": "open-folder",
          "cmd": "explorer",
          "args": ["$FOLDER"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
